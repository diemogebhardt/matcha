import gleam/string_builder.{StringBuilder}

pub fn render_builder(name) -> StringBuilder {
    let builder = string_builder.from_string("")
    let builder = string_builder.append(builder, "Hello ")
    let builder = string_builder.append(builder, name)
    let builder = string_builder.append(builder, ", good to meet you")

    builder
}

pub fn render(name) -> String {
    string_builder.to_string(render_builder(name))
}

